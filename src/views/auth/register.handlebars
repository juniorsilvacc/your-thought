<div class="auth-container">
  <h2>Registrar</h2>

  <form action="/register" method="post">
    <div class="form">
      <label for="name">Nome:</label>
      <input type="text" name="name" placeholder="Digite seu nome" required>
    </div>
    <div class="form">
      <label for="email">Email:</label>
      <input type="email" name="email" placeholder="Digite seu e-mail" required>
    </div>
    <div class="form">
      <label for="password">Senha:</label>
      <input type="password" name="password" placeholder="Digite seu password" required>
    </div>
    <div class="form">
      <label for="confirme-password">Confirme sua senha:</label>
      <input type="confirme-password" name="confirme-password" placeholder="Confirme sua senha" required>
    </div>

    <input type="submit" value="Cadastrar">

    <p>Se já está cadastrado? <a href="/login">Clique aqui</a> </p>
  </form>
</div>