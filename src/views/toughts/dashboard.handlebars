<div class="dashboard">
  <div class="title-container">
    <h2>Dashboard</h2>
    <a href="/toughts/add" class="btn-dashboard-action">Criar Pensamento</a>
  </div>
  <h3>Seus pensamentos</h3>
  <ul>
    {{#each toughts}}
      <li>
        <span class="label">
          {{this.title}}
         <p class="label-date">{{this.createdAt}}</p>
        </span>

        <span class="actions">
         
          <a href="/" class="btn-dashboard">Editar</a>

          <form action="/toughts/remove" method="post">
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="submit" value="Excluir" onclick="funcao1()">
          </form>
        </span>
      </li>
    {{/each}}
  </ul>

  {{#if emptyToughts}}
    <p>Ainda não há nenhum pensamento seu, comece por <a href="/toughts/add" class="button-now">AQUI.</a></p> 
  {{/if}}
</div>

<script>
  function funcao1(){
    alert("Deseja remover esse pensamento? ");
  }
</script>